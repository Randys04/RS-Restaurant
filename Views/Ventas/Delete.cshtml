@model RestaurantProject.Models.Ventas

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar venta</h1>

<h3>¿Estas seguro de que deseas eliminar esta venta?</h3>
<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            Numero de orden
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            Plato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.platos)
        </dd>
        <dt class = "col-sm-2">
            Fecha y hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaYhora)
        </dd>
        <dt class = "col-sm-2">
            Cantidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cantidad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
