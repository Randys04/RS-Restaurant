@model RestaurantProject.Models.Ventas 

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la venta</h1>

<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero de orden
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            Plato
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.platos)
        </dd>
        <dt class = "col-sm-2">
            Fecha y hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaYhora)
        </dd>
        <dt class = "col-sm-2">
            Cantidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cantidad)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
