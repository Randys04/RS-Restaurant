@model RestaurantProject.Models.Ventas

@{
    ViewData["Title"] = "Create";
}

<h1>Crear venta</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Numero de orden</label>
                <input readonly class="form-control" value="Se generara automaticamente"/>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="platos" class="control-label">Plato</label>
                
                <select asp-for="platos" class="form-control">
                    @foreach (var plato in Model.listPlatos)
                    {
                        <option value="@plato.nombre">@plato.nombre</option>
                    }
                </select>
                <span asp-validation-for="platos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaYhora" class="control-label">Fecha y hora</label>
                <input asp-for="fechaYhora" class="form-control" value="" />
                <span asp-validation-for="fechaYhora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidad" class="control-label">Cantidad</label>
                <input asp-for="cantidad" class="form-control" value="" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
