@model RestaurantProject.Models.Reservas

@{
    ViewData["Title"] = "Create";
}

<h1>Crear reserva</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Numero de reserva</label>
                <input readonly class="form-control" value="Se generara automaticamente" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreCliente" class="control-label">Nombre del cliente</label>
                <input asp-for="nombreCliente" class="form-control" />
                <span asp-validation-for="nombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fechaYhora" class="control-label">Fecha y hora</label>
                <input asp-for="fechaYhora" class="form-control" />
                <span asp-validation-for="fechaYhora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numPersonas" class="control-label">Numero de personas</label>
                <input asp-for="numPersonas" class="form-control" />
                <span asp-validation-for="numPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
