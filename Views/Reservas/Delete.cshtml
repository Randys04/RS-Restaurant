@model RestaurantProject.Models.Reservas

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar reserva</h1>

<h3>¿Estas seguro de eliminar esta reserva?</h3>
<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero de reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            Nombre del cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombreCliente)
        </dd>
        <dt class = "col-sm-2">
            Fecha y hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaYhora)
        </dd>
        <dt class = "col-sm-2">
            Numero de personas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numPersonas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
