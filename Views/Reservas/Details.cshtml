@model RestaurantProject.Models.Reservas

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la reserva</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero de reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            Nombre del cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombreCliente)
        </dd>
        <dt class = "col-sm-2">
            Fecha y hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaYhora)
        </dd>
        <dt class = "col-sm-2">
            Numero de personas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numPersonas)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
